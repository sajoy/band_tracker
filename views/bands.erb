<div class="col-md-6">
  <div class="box">
    <form action="/bands" method="post">
      <h3>Add a band:</h3>
      <input type="text" name="band_name">
      <button type="submit" class="btn btn-xs btn-info">Add</button>
    </form>
    <hr>
    <form action="/bands" method="post">
      <h3>Edit a band name:</h3></br>
      <input type="hidden" name="_method" value="patch">
      Old band name:
        <select name="band_id">
          <% @bands.each do |band| %>
            <option value="<%= band.id %>"> <%= band.name %> </option>
          <% end %>
        </select></br>
      New band name: <input type="text" name="new_name">
      <button type="submit" class="btn btn-xs btn-success">Update</button>
    </form>
    <hr>
    <form action="/bands" method="post">
      <h3>Delete a band:</h3>
      <input type="hidden" name="_method" value="delete">
      Select a band to delete:
        <select name="band_id">
          <% @bands.each do |band| %>
            <option value="<%= band.id %>"> <%= band.name %> </option>
          <% end %>
        </select></br>
      <button type="submit" class="btn btn-xs btn-danger">Delete</button>

    </form>


  </div>
</div>

<div class="col-md-6">
  <div class="box">
    <h2>Your BFF Bands</h2>
      <% if @bands.any? %>
        <% @bands.each do |band| %>
          <a href="/band/<%= band.id %>"><%= band.name %></a></br>
        <% end %>
        <% else %>
        You're not tracking any bands yet!
      <% end %>


  </div>
</div>
